.chat-main
  .chat-main__group-info
    .chat-main__group-info__detail  
      .chat-main__group-info__detail__name
        =@group.name
      .chat-main__group-info__detail__member
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit
      =link_to "Edit",edit_group_path(@group), class:"chat-main__group-info__edit_btn"  

  .messages
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message], remote: true do |f|
      .chat-main__message-form__new_message
        .chat-main__message-form__new_message__type__input
          = f.text_field :content, class: '.chat-main__message-form__new_message__type__input__text', placeholder: 'type a message'
          = f.label :image, class: "chat-main__message-form__new_message__type__input__icon" do
            = icon('fas', 'image', class: 'chat-main__message-form__new_message__type__input__icon__image')
            = f.file_field :image, class: 'chat-main__message-form__new_message__type__input__icon__image__mozi'
        .chat-main__message-form__new_message__send  
          = f.submit 'Send', class: 'chat-main__message-form__new_message__send__btn' 