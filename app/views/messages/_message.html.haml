.message

.chat-main
  .chat-main__group-info
    .chat-main__group-info__detail  
      .chat-main__group-info__detail__name
        yamada's friends
      .chat-main__group-info__detail__member
        yamada
    .chat-main__group-info__edit
      =link_to "Edit",'#', class:"chat-main__group-info__edit_btn"  

  .chat-main__message-list
    .chat-main__message-list__name
      =message.user.name
      .chat-main__message-list__name__date
        =message.created_at.strftime("%y年%m月%d日%H時%M分")
    .chat-main__message-list__comment
      - if message.content.present?
        %p.chat-main__message-list__comment__content
          = message.content
          = image_tag message.image.url, class: 'chat-main__message-list__comment__content__image' if message.image.present?

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: '.chat-main__message-form__type', placeholder: 'type a message'
      .chat-main__message-form__type__input
        = f.label :image, class: "chat-main__message-form__type__input__icon" do
          = icon('fas', 'image', class: 'chat-main__message-form__type__input__icon__image')
          = f.file_field :image, class: 'chat-main__message-form__type__input__icon__image__mozi'
        .chat-main__message-form__send  
          = f.submit 'Send', class: 'chat-main__message-form__send__btn' 
